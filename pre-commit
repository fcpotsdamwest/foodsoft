#!/bin/sh

{
  cat <<'EOF'
#!/bin/sh
#
# this file is generated - do not modify!
#

wd_clean ()
{
  test -z "$(git status --porcelain)"
}

export LANG=C
BRANCH=`git branch | sed -e '/^[^*]/d' -e 's/^\* \(.*\)/\1/'`
COMMIT=`git rev-parse --short HEAD`
COMMIT_FULL=`git rev-parse HEAD`
DIRTY=""
wd_clean || DIRTY='-dirty'
echo "<a href='http://github.com/fcpotsdamwest/foodsoft/commits/$COMMIT_FULL'>$BRANCH-$COMMIT$DIRTY</a>" >src/version.txt

EOF
  git ls-files src/ | xargs stat -c "chmod %a %n"
  # find . -path ./.git -prune -o -exec stat -c "chmod %a %n" \{} \;
  echo "chmod 700 .git"
} > deploy.sh

chmod 700 deploy.sh

git add deploy.sh
